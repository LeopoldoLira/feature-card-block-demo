{
    "apiVersion":2,
    "name":"custom/feature-card",
    "title":"Feature Card",
    "category":"widgets",
    "icon":"screenoptions",
    "description":"A customizable feature card with image, title, text and button.",
    "supports":{
        "html": false
    },
    "attributes":{
        "title":{ "type":"string", "source":"html", "selector":"h3" },
        "description":{ "type":"string", "source":"html", "selector":"p" },
        "imageUrl": { "type":"string" },
        "buttonText": { "type":"string", "source":"html", "selector":"a" },
        "buttonUrl": { "type":"string" }
    },
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}